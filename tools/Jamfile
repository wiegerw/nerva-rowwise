project nerva_tools
   : requirements
       <link>static
       <library>/nerva//nervalib
       <linkflags>-lpython3.12  # TODO: find a better way to do this
   ;

exe mlp : mlp.cpp : <scalar>float ;
exe mlp_double : mlp.cpp : <scalar>double ;
exe mkl : mkl.cpp : <scalar>float ;

install ../install/bin
  :
    mkl
    mlp
    mlp_double
  ;
